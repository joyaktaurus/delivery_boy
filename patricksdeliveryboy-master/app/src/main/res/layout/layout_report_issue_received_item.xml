<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_user"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:src="@drawable/profile_pic"
        app:layout_constraintTop_toTopOf="@+id/txt_receiver"
        app:layout_constraintBottom_toBottomOf="@+id/txt_receiver"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/dp_17"
        android:layout_marginStart="@dimen/dp_18"
        />

    <app.com.patricksdeliveryboy.view.CustomTextView
        android:id="@+id/txt_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Delaying Order "
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorGrey2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        android:layout_marginTop="@dimen/dp_34"
        android:background="@drawable/receiver_bg"
        android:minHeight="@dimen/dp_35"
        android:gravity="center|start"
        android:paddingStart="@dimen/dp_14"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        app:customFontThickness="regular"
        android:layout_marginStart="@dimen/dp_12"
        />

    <app.com.patricksdeliveryboy.view.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:25 PM"
        android:textSize="@dimen/sp_7"
        app:customFontThickness="regular"
        android:textColor="@color/colorGrey4"
        app:layout_constraintTop_toBottomOf="@+id/txt_receiver"
        app:layout_constraintStart_toStartOf="@+id/txt_receiver"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_5"
        />

</androidx.constraintlayout.widget.ConstraintLayout>